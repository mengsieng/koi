<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="blackTextFieldStyle">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/m_r</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="font_style_regular" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/m_r</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="font_style_medium" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/m_m</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="font_style_bold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/m_b</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="header_style">
        <item name="android:fontFamily">@font/m_r</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="facebook_btn_style" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/m_m</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#0094FF</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/m_r</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
